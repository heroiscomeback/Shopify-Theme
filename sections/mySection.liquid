<div id="textsection">
    <div class="simpletext">
        <!--{{ section.settings.text-box }} 为 liquid 标签 与下面 settings 的 id 对应-->
        <h1> {{ section.settings.text-box }} </h1>
        <h3> {{ section.settings.text }} </h3>
    </div>
</div>
